# AI Worker Environment Configuration

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# Redis Configuration
# Must match the server Redis configuration
REDIS_URL=localhost:6379
REDIS_USER=
REDIS_PASSWORD=

# Worker Configuration
# Number of messages to include for context (last N messages)
CHAT_HISTORY_LIMIT=10

# Stream Configuration
MESSAGE_CHANNEL=message_channel
RESPONSE_CHANNEL_PREFIX=response_channel_

# Logging
LOG_LEVEL=INFO

# Optional: Custom Redis database number (should match server)
# REDIS_DB=0

# Optional: OpenAI Organization (if you have one)
# OPENAI_ORG=your_organization_id

# Optional: Request timeout in seconds
# OPENAI_TIMEOUT=30