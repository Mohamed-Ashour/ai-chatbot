# Next.js Client Environment Configuration

# API Configuration
# Server API base URL (where your FastAPI server is running)
NEXT_PUBLIC_API_URL=http://localhost:3500

# WebSocket Configuration
# WebSocket URL for real-time chat (usually same host as server)
NEXT_PUBLIC_WS_URL=ws://localhost:3500

# Session Configuration
# How long to keep sessions in localStorage (in milliseconds)
# 3600000 = 1 hour (should match server session timeout)
NEXT_PUBLIC_SESSION_EXPIRY=3600000

# UI Configuration
# Toast notification position
NEXT_PUBLIC_TOAST_POSITION=bottom-right

# Toast notification duration in milliseconds
NEXT_PUBLIC_TOAST_DURATION=4000

# Development Configuration
# Set to 'true' to enable debug logs in browser console
NEXT_PUBLIC_DEBUG=false

# Optional: Custom app title and description
# NEXT_PUBLIC_APP_TITLE=AI Chatbot
# NEXT_PUBLIC_APP_DESCRIPTION=Chat with AI Assistant

# Production URLs (uncomment and update for production deployment)
# NEXT_PUBLIC_API_URL=https://your-api-domain.com
# NEXT_PUBLIC_WS_URL=wss://your-api-domain.com