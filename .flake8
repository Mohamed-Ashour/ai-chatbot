[flake8]
max-line-length = 88
extend-ignore = E203,W503
exclude = 
    .git,
    __pycache__,
    node_modules,
    .venv,
    worker/.worker-env,
    .tox,
    venv,
    env,
    build,
    dist
per-file-ignores =
    tests/*.py:F401,F841
    **/tests/**/*.py:F401,F841
    server/tests/*.py:F401,F841
    worker/tests/*.py:F401,F841